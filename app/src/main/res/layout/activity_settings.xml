<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/emergencyContactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/emergency_contact"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/emergencyContactEnabledCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/emergency_contact_enabled"
        app:layout_constraintStart_toStartOf="@+id/emergencyContactTitle"
        app:layout_constraintTop_toBottomOf="@+id/emergencyContactTitle" />

    <TextView
        android:id="@+id/emergencyPhoneNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/emergency_contact_phone_number"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/emergencyContactTitle"
        app:layout_constraintTop_toBottomOf="@id/emergencyContactEnabledCheckBox" />

    <EditText
        android:id="@+id/emergencyPhoneNumberField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:enabled="false"
        android:hint="@string/emergency_phone_number_hint"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/emergencyPhoneNumberLabel"
        app:layout_constraintTop_toBottomOf="@+id/emergencyPhoneNumberLabel" />

    <TextView
        android:id="@+id/emergencyContactMessageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/emergency_message"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/emergencyContactTitle"
        app:layout_constraintTop_toBottomOf="@id/emergencyPhoneNumberField" />

    <EditText
        android:id="@+id/emergencyContactMessageField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:enabled="false"
        android:hint="@string/emergency_message_hint"
        android:inputType="textPersonName"
        android:maxLength="30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/emergencyContactMessageLabel"
        app:layout_constraintTop_toBottomOf="@+id/emergencyContactMessageLabel" />

</android.support.constraint.ConstraintLayout>